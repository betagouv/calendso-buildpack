upstream app_server {
	server localhost:<%= ENV["APP_PORT"] %> fail_timeout=0;
}

server {
    server_name _;
    listen <%= ENV['PORT'] %>;

    location = / {
        try_files /static/index.html =404;
    }

    location = /terms.html {
        alias /static/terms.html =404;
    }

    location = /policy.html {
        alias /static/policy.html =404;
    }


    location / {

        auth_basic           on;

        proxy_pass http://app_server;
    }
}
